<body>
    <%- include("../public/layout/body") %>
    <main class="for">
        <%- include("../public/layout/flash") %>
        <h2 class="h2 mb-5">Dodaj nowy kod promocyjny:</h2>
        <form method="post" action="/developerProducts/promoCode">
