                <label for="floatingInput">Wartość zniżki w %:</label>
            </div>
            <button class="btn btn-success">Dodaj kod</button>
        </form>
        <a href="/developerProducts/promoCode/allPromos" style="margin-top: 1rem;"><button class="btn btn-primary">Wszystkie kody</button></a>
