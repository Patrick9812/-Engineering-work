<!DOCTYPE html>
<html lang="pl">
<head>
  <%- include("../public/layout/head") %>
  <title>Nowy produkt</title>
</head>
<body>
<main class="for">
    <form action="/new" method="POST" class="needValidation" novalidate>
          <div class="formpadding">
              <label class="form-label" for="name">Nazwa:</label>
              <input class="form-control" type="text" id="name" name="name" placeholder="Nazwa" required>
              <div class="valid-feedback">
                Spełnia wymogi
              </div>
          </div>
          <div class="formpadding">
              <label class="form-label" for="value">Kwota:</label>
              <input class="form-control" type="numer" name="value" id="value" min="0" placeholder="0.00" required>
              <div class="valid-feedback">
                Spełnia wymogi
              </div>
            </div>
          <div class="formpadding">
              <label class="form-label" for="type">Kategoria:</label>
              <select class="form-select" name="type" id="type" required>
                  <option selected disabled value="">Wybierz...</option>
                  <option value="Zestaw Catering">Zestaw Catering</option>
                  <option value="Sałatka">Sałatka</option>
                  <option value="Dodatki Skrobiowe">Dodatki skrobiowe</option>
                  <option value="Mięso">Mięso</option>
                  <option value="Naleśniki">Naleśniki</option>
                  <option value="Dodatek Mięsny">Dodatek mięsny</option>
              </select>
              <div class="valid-feedback">
                Spełnia wymogi
              </div>
          </div>
          <div class="formpadding">
              <label class="form-label" for="details">Szczegóły produktu:</label>
              <textarea class="form-control" placeholder="Szczegóły produktu" name="details" id="details" rows="4" required></textarea>
              <div class="valid-feedback">
                Spełnia wymogi
              </div>
          </div>
          <button class="btn btn-success">Dodaj</button>
    </form>
    <a href="/developerProducts">Powrót</a>
</main>
<script>
    (() => {
    'use strict'
    const forms = document.querySelectorAll('.needValidation')
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => 
      {
        if (!form.checkValidity()) 
        {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
<script src="/app.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>